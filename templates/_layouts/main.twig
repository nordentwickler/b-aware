<!DOCTYPE html>
<!--
webhub.de
-->
<html lang="{{ craft.app.language }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5, user-scalable=yes">
  <link rel="home" href="{{ siteUrl }}"/>
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon-16x16.png">
  <link rel="manifest" href="/assets/img/site.webmanifest">
  <style>
    [v-cloak] {
      display: none;
    }
  </style>
  {% hook 'seo' %}
  {% set settings = craft.entries.section('settings').with(['footerNavigation', 'mainNavigation', 'contactTeaser', 'contactTeaser.teaser:icon', 'contactForm']).one() %}
  {{ craft.vite.script('src/scripts/app.js', false) }}
</head>

<body {{ craft.app.config.general.devMode ? 'data-dev-mode="true"' }} >

<div id="app" v-cloak>

  {% include '_layouts/partials/header.twig' ignore missing %}

  <main>
    {% block content %}
      <p class="text-center">If you see this, no block named content was provided.</p>
    {% endblock %}
  </main>

  {% include '_layouts/partials/contact.twig' ignore missing %}

  {% include '_layouts/partials/footer.twig' ignore missing %}

</div>

{# Craft CSRF token #}
{% include '_inline-scripts/_craft-csrf-token.twig' %}

</body>
</html>
